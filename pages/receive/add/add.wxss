form{
    margin-top: 30rpx;
}
.section{
    width: 100%;
    display: flex;
    padding: 20rpx;
    box-sizing: border-box;
     font-size:35rpx;
     font-weight: 600;
     color: #333;
     border-bottom:1rpx solid #ccc; 
}
.section input{
    width:530rpx;
    font-size:30rpx;
}
.section_name,.section_pho,.section_address,.allAddress{
    font-size:35rpx;
    color:#9d9d9d;
    font-weight: 400;
    flex-shrink: 0;
}
.picker{
    display: flex;
}
.btn-area{
    position: fixed;
    width:360rpx;
    bottom:200rpx;
    left:0;
    right:0;
    margin:0 auto;
    background: -webkit-linear-gradient(top,#EF6B5E,#FF135B);
    border-radius:80rpx; 
    overflow: hidden;
}
.btn-area button{
    color: #fff;
    font-size:35rpx;
    height: 80rpx;
    line-height: 80rpx; 
    border-radius:80rpx;
    background: -webkit-linear-gradient(-30deg,rgba(255,255,255,0) 100rpx,rgba(255,255,255,.5)          180rpx,rgba(255,255,255,.5)200rpx,rgba(255,255,255,0) 260rpx) -300rpx 0 no-repeat;
}
/* 穿透 */
.btn-area .chuantou{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 35rpx;
    color: rgba(255, 255, 255, .9);
    background: -webkit-linear-gradient(-30deg,rgba(255,255,255,0) 100rpx,rgba(255,255,255,.5)          180rpx,rgba(255,255,255,.5)200rpx,rgba(255,255,255,0) 260rpx) -300rpx 0 no-repeat;
    animation: chuantou .3s linear ;
    animation-play-state:running;
    animation-iteration-count:infinite;
    animation-timing-function:linear;
    text-align: center;
}
@keyframes chuantou {
		from {
			background-position: -300rpx;
		}

		to {
			background-position: 360px;
		}
	}
