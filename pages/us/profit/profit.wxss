.profit_peoList{
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-wrap:wrap;
    width: 680rpx;
    height: auto;
    border-radius:10rpx;
    background: #fff ;
    overflow: hidden;
    margin:0 auto 20rpx; 
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}
.profit_peoList:first-child{
    margin-top:20rpx; 
}
.list_p{
    flex-shrink: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom:20rpx; 
}
.pay_day{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom:20rpx; 
}
.list_p:last-child,.pay_day:last-child{
    margin-bottom:0; 
}
.peoName{
    width:200rpx;
    flex-shrink:0;
}
.pay_profit{
