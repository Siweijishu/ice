
.lable_tab{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    font-size: 30rpx;
    color: #101010;
    box-shadow: 0 1rpx 0 rgba(0, 0, 0, .5);
    text-align: center;
}
.lable_tab .profit_box{
    flex-shrink: 0;
    flex: 1;
    padding: 10rpx 0;
    position: relative;
    box-sizing: border-box;
    background: #fff;
}
.lable_tab .profit_box:first-child{
    color: #f55;
}
.selsect_mood{
    position: absolute;
    height: 300rpx;
    width: 100%;
    top: 60rpx;
    left: 0;
    overflow-y: scroll;
    border-left: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    box-sizing: border-box;
    background: #fff;
}
.lable_tab .profit_box picker-view{
    position: absolute;
    width: 100%;
    padding: 10rpx 0;
    border-bottom:1rpx dashed #ccc; 
}
.lable_tab .profit_box .showMood{
    display: flex;
    justify-content: space-around;
    align-items: center;
}

